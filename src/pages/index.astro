<style>
	.hero {
		text-align: center;
		margin: 2em 0 3em;
	}

	.hero h1 {
		font-size: 2.5em;
		margin-bottom: 0.5em;
	}

	.subtitle {
		font-size: 1.2em;
		color: rgb(var(--gray));
	}

	.about-section {
		background: white;
		border-radius: 8px;
		padding: 2em;
		box-shadow: var(--box-shadow);
		margin-bottom: 3em;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	main {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1em;
	}

	.github-section {
		background: white;
		border-radius: 8px;
		padding: 2em;
		box-shadow: var(--box-shadow);
		margin-bottom: 3em;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.github-section h2 {
		margin-top: 0;
	}

	.github-description {
		color: rgb(var(--gray));
		margin-top: 0;
	}

	.github-heatmap {
		display: grid;
		grid-template-columns: repeat(7, 1fr);
		gap: 4px;
		margin: 1.5em 0;
	}

	.day-cell {
		width: 14px;
		height: 14px;
		border-radius: 3px;
	}

	.level-0 {
		background-color: #ebedf0;
	}

	.level-1 {
		background-color: #9be9a8;
	}

	.level-2 {
		background-color: #40c463;
	}

	.level-3 {
		background-color: #30a14e;
	}

	.level-4 {
		background-color: #216e39;
	}

	.heatmap-legend {
		display: flex;
		align-items: center;
		gap: 0.5em;
		font-size: 0.8em;
		color: rgb(var(--gray));
	}

	.legend-cell {
		width: 14px;
		height: 14px;
		border-radius: 3px;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2em;
		}
		
		.day-cell {
			width: 10px;
			height: 10px;
		}
		
		.legend-cell {
			width: 10px;
			height: 10px;
		}
	}
</style>